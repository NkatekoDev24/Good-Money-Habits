<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ‰ GMH SPECIAL BONUS ðŸŽ‰"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you have received all four GMH Shields, you are rewarded with a"
                android:textSize="20sp"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gold GMH Completion Certificate!"
                android:textSize="28sp"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@color/yellow"
                android:gravity="center"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Here it is!"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/certificate_image"
                android:layout_width="350dp"
                android:layout_height="300dp"
                android:src="@drawable/certificate"
                android:contentDescription="Gold GMH Completion Certificate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You can be very proud!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@android:color/holo_red_dark"
                android:paddingBottom="34dp" />

            <TextView
                android:id="@+id/endMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textbox_background"
                android:text="THIS IS THE END OF GMH VIDEO SERIES 1\nGOODBYE!\nALL THE BEST FOR YOU AND YOUR BUSINESS!"
                android:textSize="16sp"
                android:lineSpacingExtra="16dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/calibri_regular"
                android:gravity="center"
                android:layout_marginBottom="34dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â© Copyright FCvN Fourie 2024"
                android:textSize="20sp"
                android:fontFamily="@font/calibri_regular"
                android:textColor="@color/black"
                android:paddingBottom="34dp" />
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/signup_button_default_color"
        app:itemTextColor="@color/signup_button_default_color"
        app:itemActiveIndicatorStyle="@style/BottomNavActive"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
