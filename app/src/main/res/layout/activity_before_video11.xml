<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <!-- Top Navigation Toolbar -->
  <androidx.appcompat.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:paddingEnd="10dp"
      android:background="@color/white"
      android:elevation="4dp"
      app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
      app:title=""
      app:titleTextColor="@color/black"
      app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
      app:menu="@menu/toolbar_menu"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical">

    <!-- Introductory Text for Video 11 -->
    <TextView
        android:id="@+id/intro_text_video11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:textStyle="bold"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_video11_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Video 11. In this last video in Part 3, we deal with a quite challenging category of costs."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_video11_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It is a crucial category if one wants to control costs (expenses). \n\nReplay the video as many times as you need to. \n\nYou must really understand the concepts and types of costs â€“ and how they differ from \nvariable costs."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/intro_text_privacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[PRIVACY: We gather this information only for research and to improve the training material. Your personal information will never be shared. We promise to keep it safe and private, following South Africa's rules for protecting personal information (called the POPI Act).]"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular"
        android:textStyle="italic"
        android:paddingBottom="16dp" />

<!--    &lt;!&ndash; Questions &ndash;&gt;
