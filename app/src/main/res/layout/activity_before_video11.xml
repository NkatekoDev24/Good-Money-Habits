        android:paddingBottom="8dp" />-->

    <!-- Rent Business Premises Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Regarding your current business premises:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioRent"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Do you/your business rent your premises."
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioOwn"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Do you/your business own your premises."
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioFree"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="The owner allows you to use it free of charge."
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Own Business Premises Question -->
    <!--<TextView
        android:layout_width="wrap_content"
