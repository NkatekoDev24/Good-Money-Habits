    <!-- Other Arrangements Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other arrangements? Please describe"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <EditText
        android:id="@+id/editTextOtherArrangements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dotted_underline"
        android:minHeight="40dp"
        android:layout_marginBottom="8dp"
        android:hint="Other arrangements? Please describe: " />

    <!-- Happy with Structure Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you happy with the structure (e.g. room, kiosk, stall) from which you do business?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupStructure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioStructureYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioStructureNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:layout_marginBottom="8dp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Happy with Location Question -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you happy with the location (position) in the township where your business is?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <RadioGroup
        android:id="@+id/radioGroupLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
      <RadioButton
          android:id="@+id/radioLocationYes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Yes"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
      <RadioButton
          android:id="@+id/radioLocationNo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="No"
          android:textColor="@color/black"
          android:textSize="20sp"
          android:fontFamily="@font/calibri_regular" />
    </RadioGroup>

    <!-- Reason for Not Moving Question -->
    <TextView
        android:id="@+id/tvMoveReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If not happy, why donâ€™t you move to better premises?"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />
    <EditText
        android:id="@+id/editTextMoveReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="If not happy, why donâ€™t you move to better premises?"
        android:background="@drawable/dotted_underline"
        android:minHeight="40dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/calibri_regular" />

    <!-- Video Information Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's watch video 11 now."
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/calibri_regular"
        android:textColor="@android:color/black"
        android:paddingTop="24dp"
        android:paddingBottom="16dp" />

    <TextView
        android:id="@+id/tvCombinedToc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:background="@drawable/textbox_background"
        android:textSize="20sp"
        android:lineSpacingExtra="6dp"
        android:textColor="@color/black"
        android:fontFamily="@font/calibri_regular" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letâ€™s watch Video 11 now."
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/signup_button_default_color"
        android:paddingTop="16dp"
        android:paddingBottom="16dp" />

